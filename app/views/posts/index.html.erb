<h1>TOP</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
  <h3>旅の企画</h3>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title,post %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<table>
  <tbody>
  <h3>活躍中の旅人</h3>
  <tr>
    <% @users.each do |user| %>
    <li><%= link_to user.email,user_path(user.id) %></li>
    <% end %>
  </tr>
  </tbody>
</table>


<br>